{
  "compilerOptions": {
    "jsx": "preserve",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
